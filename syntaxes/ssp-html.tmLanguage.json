{
  "name": "SCA Server Page (HTML)",
  "scopeName": "text.html.sca.ssp",
  "injections": {
    "text.html.sca.ssp - (meta.embedded.block.sca.ssp | meta.embedded.line.sca.ssp | meta.tag | comment), L:meta.tag, L:source.js.embedded.html": {
      "patterns": [
        {
          "begin": "(^\\s*)(?=<%+#(?![^%]*%>))",
          "beginCaptures": {
            "0": {
              "name": "punctuation.whitespace.comment.leading.sca.ssp"
            }
          },
          "end": "(?!\\G)(\\s*$\\n)?",
          "endCaptures": {
            "0": {
              "name": "punctuation.whitespace.comment.trailing.sca.ssp"
            }
          },
          "patterns": [
            {
              "include": "#comment"
            }
          ]
        },
        {
          "begin": "(^\\s*)(?=<%(?![^%]*%>))",
          "beginCaptures": {
            "0": {
              "name": "punctuation.whitespace.embedded.leading.sca.ssp"
            }
          },
          "end": "(?!\\G)(\\s*$\\n)?",
          "endCaptures": {
            "0": {
              "name": "punctuation.whitespace.embedded.trailing.sca.ssp"
            }
          },
          "patterns": [
            {
              "include": "#tags"
            }
          ]
        },
        {
          "include": "#comment"
        },
        {
          "include": "#tags"
        }
      ]
    }
  },
  "patterns": [
    {
      "include": "text.html.basic"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "begin": "<%+#",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.begin.sca.ssp"
            }
          },
          "end": "%>",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.end.sca.ssp"
            }
          },
          "name": "comment.block.sca.ssp"
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "begin": "<%+(?!>)[-=]?(?![^%]*%>)",
          "beginCaptures": {
            "0": {
              "name": "punctuation.section.embedded.begin.sca.ssp"
            }
          },
          "contentName": "source.js.embedded.sca.ssp",
          "end": "-?%>",
          "endCaptures": {
            "0": {
              "name": "punctuation.section.embedded.end.sca.ssp"
            },
            "1": {
              "name": "source.js"
            }
          },
          "name": "meta.embedded.block.sca.ssp",
          "patterns": [
            {
              "captures": {
                "1": {
                  "name": "punctuation.definition.comment.sca.ssp"
                }
              },
              "match": "(#).*?(?=-?%>)",
              "name": "comment.line.number-sign.sca.ssp"
            },
            {
              "include": "source.js"
            }
          ]
        },
        {
          "begin": "<%+(?!>)[-=]?",
          "beginCaptures": {
            "0": {
              "name": "punctuation.section.embedded.begin.sca.ssp"
            }
          },
          "contentName": "source.js.embedded.sca.ssp",
          "end": "-?%>",
          "endCaptures": {
            "0": {
              "name": "punctuation.section.embedded.end.sca.ssp"
            },
            "1": {
              "name": "source.js"
            }
          },
          "name": "meta.embedded.line.sca.ssp",
          "patterns": [
            {
              "captures": {
                "1": {
                  "name": "punctuation.definition.comment.sca.ssp"
                }
              },
              "match": "(#).*?(?=-?%>)",
              "name": "comment.line.number-sign.sca.ssp"
            },
            {
              "include": "source.js"
            }
          ]
        }
      ]
    }
  }
}
