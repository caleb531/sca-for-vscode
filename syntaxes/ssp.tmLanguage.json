{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SCA Server Page",
	"scopeName": "source.sca.ssp",
	"injectionSelector": "L:text.html.sca.ssp",
	"patterns": [
		{
			"include": "#tag-block-comment"
		},
		{
			"include": "#tag-single-line-section-comment"
		},
		{
			"include":"#tag-section-comment"
		},
		{
			"include":"#tag-ssp-single-line"
		},
		{
			"include":"#tag-ssp-multi-line"
		}
	],
	"repository": {
		"tag-block-comment": {
			"begin": "<[%?]#",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.comment.sca.ssp"
				}
			},
			"end": "[%?]>",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.comment.sca.ssp"
				}
			},
			"name": "comment.block.sca.ssp"
		},
		"tag-single-line-section-comment": {
			"begin": "(<[%?](?:(?!php))[%_=-]?)\\s*((\/\\*)(.*)(\\*\/))(?=(\\s*([%?]>)))",
			"captures": {
				"1": {
					"name": "keyword.operator.relational.js"
				},
				"3": {
					"name": "punctuation.definition.comment.sca.ssp"
				},
				"5": {
					"name": "punctuation.definition.comment.sca.ssp"
				},
				"2": {
					"name": "comment.block.sca.ssp"
				}
			},
			"end": "([%?]>)",
			"endCaptures": {
				"1": {
					"name": "keyword.operator.relational.js"
				}
			},
			"contentName": "comment.block.sca.ssp",
			"name":"meta.block.single.comment.sca.ssp"
		},
		"tag-section-comment": {
			"name":"comment.block.sca.ssp",
			"begin":"(<[%?](?:(?!php)))\\s*((?=(\/\\*)))",
			"beginCaptures": {
				"1": {
					"name": "keyword.operator.relational.js"
				}
			},
			"end": "(\\*\/)\\s*([%?]>)",
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.comment.sca.ssp"
				},
				"2": {
					"name": "keyword.operator.relational.js"
				}
			},
			"patterns":[
				{
					"name":"ssp-end-tag",
					"match":"([%?]>)",
					"captures":{
						"1":{
							"name":"keyword.operator.relational.js"
						}
					}
				},
				{
					"name":"ssp-begin-tag",
					"match":"(<[%?](?:(?!php)))",
					"captures":{
						"1":{
							"name":"keyword.operator.relational.js"
						}
					}
				},
				{
					"include":"source.sca.ssp"
				}
			]
		},
		"tag-ssp-single-line": {

			"name": "meta.tag.metadata.script.sca.ssp",
			"begin":"(<[%?](?:(?!php))[%_=-]?)(?!(\\s*\\*\/))(((?!([_-]?[%?]>)).)+)(?=([_-]?[%?]>))",
			"beginCaptures": {
				"0": {
					"contentName":"source.js",
					"name": "meta.embedded.*"
				},
				"1": {
					"name": "keyword.operator.relational.js"
				},
				"3": {
					"name": "meta.embedded.sca.ssp",
					"contentName": "source.js",
					"patterns":[
						{
							"include":"source.js"
						}
					]
				},
				"6": {
					"name": "keyword.operator.relational.js"
				}
			},
			"end": "(([_-]?[%?]>))",
			"endCaptures": {
				"1": {
					"name": "keyword.operator.relational.js"
				}
			}
		},
		"tag-ssp-multi-line": {
			"contentName":"source.js",
			"name": "meta.block.sca.ssp",
			"begin":"(<[%?](?:(?!php))[%_=-]?)(?!(\\s*\\*\/))",
			"beginCaptures": {
				"1": {
					"name": "keyword.operator.relational.js"
				},
				"3": {
					"name": "meta.embedded.sca.ssp",
					"contentName": "source.js",
					"patterns":[
						{
							"include":"source.js"
						}
					]
				}
			},
			"end": "(([_-]?[%?]>))",
			"endCaptures": {
				"1": {
					"name": "keyword.operator.relational.js"
				}
			},
			"patterns":[
				{
					"include":"source.js"
				}
			]
		}
	}
}
