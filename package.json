{
  "name": "sca-for-vscode",
  "displayName": "SuiteCommerce Advanced for VS Code",
  "description": "Adds syntax highlighting and other language features for SuiteCommerce Advanced",
  "version": "2.0.2",
  "publisher": "caleb531",
  "engines": {
    "vscode": "^1.57.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/caleb531/sca-for-vscode.git"
  },
  "icon": "icon.png",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": ["suitecommerce", "suitecommerce advanced", "netsuite", "suitescript"],
  "contributes": {
    "languages": [
      {
        "id": "handlebars",
        "extensions": [".tpl"]
      },
      {
        "id": "sca-ssp-html",
        "aliases": ["SCA Server Page (HTML)"],
        "extensions": [".ssp", "merchzone.txt", "merchzone_default.txt"],
        "configuration": "./configuration/ssp-html.json"
      },
      {
        "id": "sca-ssp-javascript",
        "aliases": ["SCA Server Page (JavaScript)"],
        "extensions": [".environment.ssp"],
        "configuration": "./configuration/ssp-javascript.json"
      },
      {
        "id": "javascript",
        "extensions": [".ss"]
      },
      {
        "id": "json",
        "extensions": [".nstba"]
      }
    ],
    "grammars": [
      {
        "language": "sca-ssp-html",
        "scopeName": "text.html.sca.ssp",
        "path": "./syntaxes/ssp-html.tmLanguage.json"
      },
      {
        "language": "sca-ssp-javascript",
        "scopeName": "source.js.sca.ssp",
        "path": "./syntaxes/ssp-javascript.tmLanguage.json"
      },
      {
        "scopeName": "source.sca.ssp",
        "path": "./syntaxes/ssp.tmLanguage.json",
        "injectTo": [
          "text.html.sca.ssp",
          "source.js.sca.ssp"
        ],
        "embeddedLanguages": {
          "source.js": "javascript"
        }
      }
    ],
    "snippets": [
      {
        "language": "handlebars",
        "path": "./snippets/tpl.json"
      }
    ]
  }
}
