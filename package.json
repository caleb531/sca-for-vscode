{
  "name": "sca-vscode",
  "displayName": "SCA for VS Code",
  "description": "Adds syntax highlighting and other language features for SuiteCommerce Advanced",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sca-tpl",
        "aliases": ["SCA Template"],
        "extensions": [".tpl"],
        "configuration": "./configuration/tpl.json"
      },
      {
        "id": "sca-ssp",
        "aliases": ["SCA Server Page"],
        "extensions": [".ssp"],
        "configuration": "./configuration/ssp.json"
      }
    ],
    "grammars": [
      {
        "language": "sca-tpl",
        "scopeName": "text.html.handlebars.sca.tpl",
        "path": "./syntaxes/tpl.tmLanguage.json"
      },
      {
        "language": "sca-ssp",
				"scopeName": "text.html.ejs",
				"path": "./syntaxes/ejs.tmLanguage.json",
				"injectTo": [
					"text.html"
				],
				"embeddedLanguages": {
					"meta.embedded.block.ejs": "ejs",
					"meta.embedded.block.javascript": "source.js"
				}
      }
    ]
  }
}
