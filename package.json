{
  "name": "sca-for-vscode",
  "displayName": "SCA for VS Code",
  "description": "Adds syntax highlighting and other language features for SuiteCommerce Advanced",
  "version": "0.1.0",
  "publisher": "caleb531",
  "engines": {
    "vscode": "^1.57.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/caleb531/sca-for-vscode.git"
  },
  "icon": "icon.png",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sca-template",
        "aliases": ["SCA Template"],
        "extensions": [".tpl"],
        "configuration": "./configuration/tpl.json"
      },
      {
        "id": "sca-ssp-html",
        "aliases": ["SCA Server Page (HTML)"],
        "extensions": [".ssp", "merchzone.txt", "merchzone_default.txt"],
        "configuration": "./configuration/ssp-html.json"
      },
      {
        "id": "sca-ssp-javascript",
        "aliases": ["SCA Server Page (JavaScript)"],
        "extensions": [".environment.ssp"],
        "configuration": "./configuration/ssp-javascript.json"
      },
      {
        "id": "sca-service",
        "aliases": ["SCA Service"],
        "extensions": [".ss"],
        "configuration": "./configuration/ss.json"
      },
      {
        "id": "sca-nstba",
        "aliases": ["SCA TBA File"],
        "extensions": [".nstba"],
        "configuration": "./configuration/nstba.json"
      }
    ],
    "grammars": [
      {
        "language": "sca-template",
        "scopeName": "text.html.handlebars.sca.tpl",
        "path": "./syntaxes/tpl.tmLanguage.json"
      },
      {
        "language": "sca-ssp-html",
        "scopeName": "text.html.sca.ssp",
        "path": "./syntaxes/ssp-html.tmLanguage.json"
      },
      {
        "language": "sca-ssp-javascript",
        "scopeName": "source.js.sca.ssp",
        "path": "./syntaxes/ssp-javascript.tmLanguage.json"
      },
      {
        "scopeName": "source.sca.ssp",
        "path": "./syntaxes/ssp.tmLanguage.json",
        "injectTo": [
          "text.html.sca.ssp",
          "source.js.sca.ssp"
        ],
        "embeddedLanguages": {
          "source.js": "javascript"
        }
      },
      {
        "language": "sca-service",
        "scopeName": "source.js.sca.ss",
        "path": "./syntaxes/ss.tmLanguage.json"
      },
      {
        "language": "sca-nstba",
        "scopeName": "source.json.sca.nstba",
        "path": "./syntaxes/nstba.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sca-template",
        "path": "./snippets/tpl.json"
      }
    ]
  }
}
